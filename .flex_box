.flex_section {
  display: flex;
  flex-wrap: wrap;            /* allows 2 rows */
  justify-content: center;    /* centers boxes horizontally */
  gap: 30px;                  /* space between boxes */
  width: 900px;               /* fixes total width to fit 3 boxes per row */
  margin: 40px auto;          /* centers the group on page */
}

.flex_box {
  flex: 0 0 calc(33.33% - 20px); /* 3 boxes per row */
  max-width: 250px;
  background-color: #f8f8f8;
  border: 2px solid #ccc;
  border-radius: 12px;
  height: 180px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: transform 0.2s ease, background-color 0.2s ease;
}

.flex_box:hover {
  background-color: #eaeaea;
  transform: translateY(-5px);
}

.flex_box h2 {
  margin-bottom: 8px;
}

.flex_box p {
  margin: 0;
  font-weight: bold;
  color: #555;
}
